<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.lc.blocnotes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Bloc-Notes</name>
    <description>
        A note pad - Apache Cordova application.
    </description>
    <author email="" href="https://github.com/GeorgiaLR">
        GeorgiaLR
    </author>
    <content src="index.html" />
    <icon platform="android" src="res/icon/android/logobn.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
