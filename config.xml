<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.lc.blocnotes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bloc-Notes</name>
    <description>
        A note pad - Apache Cordova application.
    </description>
    <author email="" href="https://github.com/GeorgiaLR">
        GeorgiaLR
    </author>
    <content src="index.html" />
    <icon platform="android" src="res/icon/android/logobn.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.0.0" />
</widget>
